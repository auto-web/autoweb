{% extends "base.twig" %}

{% block content %}

<h2 class="m-2 mt-4">Création de compte</h2>
<h3 class="m-2 mt-4">Créer à partir d'un .csv</h3>
<form enctype="multipart/form-data" method="post">
    <input type="file" name="new_users_info" id="new_users_info">
    <input type="submit" value="Créer">
</form>
<a href="files/model.csv" class="btn btn-primary rounded">obtenir Model.csv</a>

<h3 class="m-2 mt-4">Créer manuellement</h3>
<form  method="post">
    <table class="table">
        <tr>
            <td>Prénom</td>
            <td><input type="text" name="first_name" id="first_name" required></td>
        </tr>
        <tr>
            <td>Nom</td>
            <td><input type="text" name="last_name" id="last_name" required></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type="email" name="email" id="email" required></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><input type="text" name="description" id="description" required></td>
        </tr>
    </table>
    <input type="submit" value="Créer">
</form>

{% endblock %}